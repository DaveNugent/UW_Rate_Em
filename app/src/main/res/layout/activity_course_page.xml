<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coursePage">

    <TextView
        android:id="@+id/courseNameText"
        android:layout_width="312dp"
        android:layout_height="75dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="CourseName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gradeText"
        android:layout_width="110dp"
        android:layout_height="73dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:text="Grade"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addRatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="201dp"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="104dp"
        android:text="Add Rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addCourseSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="236dp"
        android:text="Add Course to Schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ratingText"
        android:layout_width="123dp"
        android:layout_height="46dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="209dp"
        android:ems="10"
        android:hint="Rating"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>